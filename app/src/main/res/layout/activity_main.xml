<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_menu_button_text"
        android:id="@+id/start_menu_activity_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="start_menu_activity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_exit_button_text"
        android:id="@+id/exit_main_button_text"
        android:onClick="exit_button"
        android:layout_below="@+id/start_menu_activity_button"
        android:layout_alignLeft="@+id/start_menu_activity_button"
        android:layout_alignStart="@+id/start_menu_activity_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friendsr_main_text"
        android:textSize="25sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:textColor="#ff000000" />

</RelativeLayout>
